+enable_list_auto_update()
+{
+	grep "$list_update_min_time $list_update_day_time * * $list_update_week_time /usr/share/smartdns/update-list.sh updatelist" /etc/crontabs/root 2>/dev/null
+	if [ $? -eq 0 ]; then
+		return 
+	fi
+
+	disable_list_auto_update 1
+	echo "$list_update_min_time $list_update_day_time * * $list_update_week_time /usr/share/smartdns/update-list.sh updatelist" >> /etc/crontabs/root
+	restart_crond
+}
