+{
+	local list_no_restart="$1"
+	grep "/usr/share/smartdns/update-list.sh updatelist" /etc/crontabs/root 1>/dev/null 2>&1
+	if [ $? -ne 0 ]; then
+		return 
+	fi
+
+	sed -i '\@/usr/share/smartdns/update-list.sh updatelist@d' /etc/crontabs/root
+
+	if [ "$list_no_restart" = "1" ]; then
+		return
+	fi
+
+	restart_crond
+}
