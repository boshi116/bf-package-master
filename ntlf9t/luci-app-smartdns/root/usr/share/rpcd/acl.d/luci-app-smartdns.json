{
	"luci-app-smartdns": {
		"description": "Grant access to LuCI app smartdns",
		"read": {
			"file": {
				"/etc/smartdns/*": [ "read" ]
			},
			"ubus": {
				"service": [ "list" ]
			},
			"uci": [ "smartdns" ]
		},
		"write": {
			"file": {
				"/etc/smartdns/*": [ "write" ],
				"/etc/init.d/smartdns restart": [ "exec" ],
				"/etc/init.d/smartdns updatefiles": [ "exec" ],
				"/usr/share/smartdns/update-list.sh": [ "exec" ]
			},
			"uci": [ "smartdns" ]
		}
	}
}
